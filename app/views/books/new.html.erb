<h1>New Book</h1>

<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :publication_year %>
  <%= f.number_field :publication_year %>

  <%= f.label :pages %>
  <%= f.number_field :pages %>

  <%= f.label :cover_image %>
  <%= f.url_field :cover_image %>

  <%= f.label :authors %>
  <%= f.text_field :authors, :value => "" %>

  <%= f.submit %>
<% end %>
